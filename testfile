# Update your package manager's index
sudo yum update

# Install required dependencies for pyenv
sudo yum install -y git gcc make zlib-devel bzip2 bzip2-devel readline-devel sqlite sqlite-devel openssl-devel tk-devel libffi-devel

# Clone the pyenv repository from GitHub
git clone https://github.com/pyenv/pyenv.git ~/.pyenv

# Add pyenv to your shell's environment (for example, in your ~/.bashrc or ~/.bash_profile)
echo 'export PYENV_ROOT="$HOME/.pyenv"' >> ~/.bashrc
echo 'export PATH="$PYENV_ROOT/bin:$PATH"' >> ~/.bashrc
echo 'eval "$(pyenv init --path)"' >> ~/.bashrc
echo 'eval "$(pyenv init -)"' >> ~/.bashrc

# Reload your shell environment or restart your terminal
source ~/.bashrc
